<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #E7D283;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.uaspbo.Register">
    <children>
        <VBox alignment="CENTER" layoutX="150.0" layoutY="50.0" prefWidth="300.0" spacing="15">
            <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Register" />
            <VBox spacing="10">
                <HBox spacing="10">
                    <Label text="Full Name:" />
                    <TextField fx:id="txtFullName" promptText="Masukkan nama lengkap Anda" />
                </HBox>
                <HBox spacing="10">
                    <Label text="Username:" />
                    <TextField fx:id="txtUsername" promptText="Masukkan username Anda" />
                </HBox>
                <HBox spacing="10">
                    <Label text="Password:" />
                    <PasswordField fx:id="txtPassword" promptText="Masukkan password Anda" />
                </HBox>
                <HBox spacing="10">
                    <Label text="Confirm Password:" />
                    <PasswordField fx:id="txtConfirmPassword" promptText="Konfirmasi password Anda" />
                </HBox>
            </VBox>
            <Button fx:id="btnRegister" style="-fx-min-width: 100;" text="Register" />
            <Label text="Sudah punya akun?" />
            <Hyperlink fx:id="linkLogin" style="-fx-background-color: #32CD32;" text="Login" textFill="#ffefef" />
        </VBox>
    </children>
</AnchorPane>
